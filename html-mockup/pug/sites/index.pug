extends ../templates/site/login.pug

block title
    title Login - Just-In-Time 

block content
  .background(style="background-image:url(/images/arena.jpg)")
  .content
    .catchphrase Make it count.
    .logo
      img(src="/images/logo_long.svg", alt="Logo Just-In-Time")
    form.login-form
      h1 Anmelden
      p.label Erfahren Sie Zeitmanagement von Morgen. Gestalten Sie Ihre Zukunft jetzt.
      
      button.bx--btn.bx--btn--primary(type="button") With Svg
        <svg focusable="false" preserveAspectRatio="xMidYMid meet" style="will-change: transform;" xmlns="http://www.w3.org/2000/svg" class="bx--btn__icon" width="16" height="16" viewBox="0 0 16 16" aria-hidden="true"><path d="M8.5 7.5V3h-1v4.5H3v1h4.5V13h1V8.5H13v-1z"></path></svg>
      button.btn.btn--primary(type="submit") Anmelden
      button.btn.btn--ghost(type="button") Passwort vergessen


  